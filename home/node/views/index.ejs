    <form action="/postForm" method="post">
        <label for="name" class="name">이름</label>
        <input type="text" name="name" id="name">
        <fieldset>
            <legend>성별</legend>
            <input type="radio" id="male" name="gender" value="남자">
            <label for="male">남자</label>
            <input type="radio" id="female" name="gender" value="여자">
            <label for="female">여자</label>
        </fieldset> <br>
        <fieldset>
            <legend>생년월일</legend>
            <select name="year" id="year">
                <% for(let i = 2024; i > 1923; i--) {%>
                    <option value="<%= i %>"><%= i %></option>
                <% } %>
            </select>년
            <select name="month" id="month">
                <% for(let i = 1; i < 13; i++) {%>
                    <option value="<%= i %>"><%= i %></option>
                <% } %>
            </select>월
            <select name="day" id="day"><% for(let i = 1; i < 32; i++) {%>
                <option value="<%= i %>"><%= i %></option>
            <% } %></select>일
        </fieldset> <br>
        <fieldset>
            <legend>관심사</legend>
            <input type="checkbox" name="interest" id="trip" value="여행">
            <label for="trip">여행</label>
            <input type="checkbox" name="interest" id="music" value="음악감상">
            <label for="music">음악감상</label>
            <input type="checkbox" name="interest" id="picture" value="사진찍기">
            <label for="picture">사진찍기</label>
        </fieldset> <br>
        <fieldset>
            <legend>선택</legend>
            <label for="phone">전화번호</label>
            <input type="tel" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{4}-[0-9]{4}" placeholder="010-1234-5678" /> <br>
            <label for="appt">현재 시간</label>
            <input type="time" id="appt" name="appt" min="09:00" max="18:00" required />
        </fieldset> <br>
        <button type="submit">회원가입</button>
    </form>
</body>
